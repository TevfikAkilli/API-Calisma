@{
    var hotels = (List<HotelFinder.Entities.Hotel>)ViewBag.HotelListAll;
}


<div class="container col-md-6 table table-striped">
    <table>
        <thead>
            <tr>
                <th>Otel Adı</th>
                <th>Şehir</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in hotels)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.City</td>
                </tr>

            }

        </tbody>

    </table>


</div>